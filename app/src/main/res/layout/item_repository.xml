<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>

        <variable
            name="data"
            type="com.example.lecturesopt28th.githubrepo.dto.RepositoryModelItem" />
        <variable
            name="viewModel"
            type="com.example.lecturesopt28th.githubrepo.viewmodel.GithubRepoViewModel" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/repository"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/repository_delete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/repository_item"
            app:layout_constraintBottom_toBottomOf="@id/repository_item"
            app:layout_constraintTop_toTopOf="@id/repository_item"
            app:layout_constraintEnd_toEndOf="@id/repository_item"
            android:background="@drawable/box_delete_repository">

            <ImageView
                android:id="@+id/imageview_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ic_baseline_delete"
                app:layout_constraintTop_toTopOf="@id/repository_delete"
                app:layout_constraintBottom_toBottomOf="@id/repository_delete"
                app:layout_constraintEnd_toEndOf="@id/repository_delete"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/repository_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/box_repository"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/textview_repository_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                app:layout_constraintWidth_percent="0.7"
                android:fontFamily="@font/apple_sd_gothic_neo_bold"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@{data.name}"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Name of Repository"
                app:layout_constraintHorizontal_bias="0.2"/>

            <TextView
                android:id="@+id/textview_repostiory_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintHorizontal_bias="0.0"
                android:ellipsize="marquee"
                android:fontFamily="@font/apple_sd_gothic_neo_bold"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@{data.description != null ? data.description : @string/no_description}"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/textview_repository_name"
                app:layout_constraintTop_toBottomOf="@id/textview_repository_name"
                tools:text="Repository Description" />

            <TextView
                android:id="@+id/textview_repostiory_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:text="@{data.language.toString() != null ? data.language.toString() : @string/no_language}"
                app:layout_constraintStart_toStartOf="@id/textview_repostiory_description"
                app:layout_constraintTop_toBottomOf="@id/textview_repostiory_description"
                android:textSize="14sp"
                android:fontFamily="@font/apple_sd_gothic_neo_bold"
                tools:text="Repository Language"/>


        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
